{
	"compilerOptions": {
		"checkJs": true,
		"allowJs": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"maxNodeModuleJsDepth": 0,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": false,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"allowUnreachableCode": false,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"noEmitOnError": false,
		"baseUrl": ".",
		"paths": {
			"*": [
				"*",
				"src/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"dist",
		"build",
		"coverage",
		"tests/**/*",
		"**/*.test.js",
		"node_modules/ak-tools/**/*"
	],
	"include": [
		"index.js",
		"logger.js",
		"types.d.ts"
	]
}